# Database Configuration
DB_TYPE=mysql  # mysql, postgresql, or sqlite
DB_HOST=localhost
DB_PORT=3306
DB_NAME=petrol_price_db
DB_USER=root
DB_PASSWORD=your_password_here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_PORT=5000

# Paths
UPLOAD_FOLDER=uploads
MODEL_FOLDER=ml_pipeline/saved_models
REPORTS_FOLDER=reports

# Scheduler Configuration
ENABLE_SCHEDULER=True
DATA_FETCH_HOUR=9  # Daily data fetch at 9 AM
RETRAIN_DAY=6  # Sunday (0=Monday, 6=Sunday)
RETRAIN_HOUR=2  # Retrain at 2 AM

# Data Sources
PETROL_PRICE_URL=https://example.com/petrol-prices  # Update with actual source
CRUDE_OIL_TICKER=CL=F  # WTI Crude Oil
INR_USD_TICKER=INR=X  # INR to USD

# Model Configuration
MAX_TRIALS=10  # Auto-Keras max trials
EPOCHS=50
VALIDATION_SPLIT=0.2
